<!DOCTYPE html>
<html>
  <head>
    <title>BoardGame</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'%>
  </head>

  <body>
    <%= link_to "Home", root_path %>
  	<% if current_user %>
  		<%= link_to "Logout", '/logout' %>
  	<% else %>
  		<%= link_to "Login", '/login' %>
  		<%= link_to "Signup", new_user_path %>
  	<% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
